<resources>
    <!-- Base application theme. -->
    <style name="Theme.Baemin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baemin_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Baemin TextAppearance -->
    <style name="TextAppearance.Baemin.System1" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.Baemin.System2" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.Baemin.System3" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TextAppearance.Baemin.System3.Title" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.Baemin.System4.Regular" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TextAppearance.Baemin.System4.Medium" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>
</resources>