<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="328dp"
        android:layout_height="251dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_food1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/ic_shopping_basket" />

        <ImageView
            android:id="@+id/img_food2"
            android:layout_row="0"
            android:layout_rowWeight="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/ic_shopping_basket" />

        <ImageView
            android:id="@+id/img_food3"
            android:layout_row="1"
            android:layout_rowWeight="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/ic_shopping_basket" />

        <TextView
            android:id="@+id/tv_store_name"
            style="@style/TextAppearance.Baemin.subhead1_16pt"
            android:layout_row="2"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            tools:text="식당 이름 들어갈 곳" />

        <TextView
            android:id="@+id/tv_delivery_time"
            style="@style/TextAppearance.Baemin.body6"
            android:layout_row="3"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            tools:text="배달시간 들어갈 곳" />

        <TextView
            android:id="@+id/tv_list_order"
            style="@style/TextAppearance.Baemin.body6"
            android:layout_row="4"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            tools:text="최소주문금액" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>