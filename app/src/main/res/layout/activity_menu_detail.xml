<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baemin_background">

    <ImageView
        android:id="@+id/img_foodimage"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_menu_name"
        style="@style/TextAppearance.Baemin.headline_24pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_foodimage"
        tools:text="중국도삭면" />

    <TextView
        android:id="@+id/tv_food_description"
        style="@style/TextAppearance.Baemin.body3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_name"
        tools:text="아마도 맛있을 것이다\n야미야미야미" />

    <TextView
        android:id="@+id/tv_price_tag"
        style="@style/TextAppearance.Baemin.headline_18pt"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="30dp"
        android:paddingBottom="24dp"
        android:text="가격"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_food_description" />

    <TextView
        style="@style/TextAppearance.Baemin.headline_18pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="30dp"
        android:paddingBottom="24dp"
        app:layout_constraintLeft_toRightOf="@id/tv_price_tag"
        app:layout_constraintRight_toLeftOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@id/tv_food_description"
        tools:text="빈 공간을 어떻게 메꾸는지 몰라서 이"/>


    <TextView
        android:id="@+id/tv_price"
        style="@style/TextAppearance.Baemin.headline_18pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="30dp"
        android:paddingRight="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_food_description"
        tools:text="15000원" />

    <TextView
        android:id="@+id/tv_cnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수량"
        android:paddingLeft="16dp"
        android:layout_marginTop="11dp"
        android:paddingTop="31dp"
        android:paddingBottom="29dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_price_tag"
        style="@style/TextAppearance.Baemin.headline_18pt"/>

    <LinearLayout
        android:id="@+id/tv_cnt_btn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/box_layout"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_minus"
            android:layout_marginVertical="24dp"
            android:layout_marginLeft="17dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="개수"/>

        <ImageButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/ic_plus"
            android:layout_marginVertical="18dp"
            android:layout_marginRight="17dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>