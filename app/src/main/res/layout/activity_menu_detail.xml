<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/baemin_background"
        tools:context="com.sopt.baemin.presentation.MainActivity">

        <ImageView
            android:id="@+id/img_foodimage"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_menu_name"
            style="@style/TextAppearance.Baemin.headline_24pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingTop="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_foodimage"
            android:text="중국도삭면"
            tools:text="중국도삭면" />

        <TextView
            android:id="@+id/tv_food_description"
            style="@style/TextAppearance.Baemin.body3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingTop="14dp"
            android:text="야미"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_name"
            tools:text="아마도 맛있을 것이다\n야미야미야미" />

        <LinearLayout
            android:id="@+id/linaer1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_food_description">
            <TextView
                android:id="@+id/tv_price_tag"
                style="@style/TextAppearance.Baemin.headline_18pt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingTop="30dp"
                android:paddingBottom="24dp"
                android:text="가격"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_food_description" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_price"
                style="@style/TextAppearance.Baemin.headline_18pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="30dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"
                android:text="15000원"
                tools:text="15000원" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cnt"
            style="@style/TextAppearance.Baemin.headline_18pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingTop="31dp"
            android:paddingBottom="29dp"
            android:text="수량"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linaer1" />

        <LinearLayout
            android:id="@+id/tv_cnt_btn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/box_layout"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linaer1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginLeft="17dp"
                android:background="@drawable/ic_minus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"
                android:text="개수" />

            <ImageButton
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginVertical="18dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/ic_plus" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/ic_warn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cnt" />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Baemin.body10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배달최소주문금액" />

                <TextView
                    style="@style/TextAppearance.Baemin.body5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8,000원"
                    tools:text="8,000원" />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/ic_more_btn" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>